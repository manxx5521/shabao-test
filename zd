代办
/**数据表*/
CREATE TABLE td_ui_table (
  table_id varchar(10) NOT NULL comment '数据表id',
	table_name varchar(20) NOT NULL comment '数据表名',
	table_type varchar(1) NOT NULL comment '数据表类型',
	remark varchar(100) comment '备注',
  PRIMARY KEY  (table_id)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;

/**数据表元素*/
CREATE TABLE td_ui_table_element (
  table_id varchar(10) NOT NULL comment '数据表id',
  field_code varchar(30) NOT NULL comment '数据字段',
	field_name varchar(20) NOT NULL comment '数据表名',
  field_type int(2) not null comment '数据类型',
  field_length int(3) not null comment '数据长度',
  field_decimal int(2) not null comment '小数为长度',
  is_key int(1) comment '是否主键',
  is_null int(1) comment '是否非空',
  is_ref int(1) comment '是否有关联表',
  ref_table varchar(20) comment '关联表明',
  ref_table_key varchar(20) comment '关联字段',
  ref_table_value varchar(20) comment '翻译字段'，
  ref_table_sql varchar(1000) comment '翻译sql', 
	remark varchar(100) comment '备注',
  PRIMARY KEY  (table_id,field_code),
  CONSTRAINT pk_td_ui_table_element_1 FOREIGN KEY (table_id) REFERENCES td_ui_table(table_id)
) ENGINE=InnoDB DEFAULT CHARSET=utf8;
