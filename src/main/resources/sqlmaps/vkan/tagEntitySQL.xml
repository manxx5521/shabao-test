<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.xiaoshabao.vkan.entity.TagEntity">
	<sql id="tagColumns">
		vk_tag.tag_id
		,vk_tag.name
		,vk_tag.icon
		,vk_tag.type
		,vk_tag.level
		,vk_tag.parent_id
		,multiple
		,vk_tag.file_show
		,vk_tag.file_order
		,vk_tag.used
		,vk_tag.order_no
	</sql>
	<sql id="tagColumnsRef">
		${prefix}.tag_id
		,${prefix}.name
		,${prefix}.icon
		,${prefix}.type
		,${prefix}.level
		,${prefix}.parent_id
		,${prefix}.multiple
		,${prefix}.file_show
		,${prefix}.file_order
		,${prefix}.used
		,${prefix}.order_no
	</sql>

	
	<select id="getTagEntity" resultType="com.xiaoshabao.vkan.entity.TagEntity"
		parameterType="com.xiaoshabao.vkan.entity.TagEntity">
		select
		<include refid="tagColumns" />
		from vk_tag
		<where>
			<if test="parentId != null and parentId !=''">
				and parent_id=#{parentId}
			</if>
		</where>
		order by level,order_no
	</select>
	
	<select id="getlabelTag" resultType="com.xiaoshabao.vkan.entity.TagEntity"
		parameterType="com.xiaoshabao.vkan.entity.TagEntity">
		select
		<include refid="tagColumns" />
		from vk_tag
		where vk_tag.file_show='1'
			and exists (
					select 1 from vk_file_tag a
					where vk_tag.tag_id=a.tag_id
					and a.file_id =#{fileId}
				)
		order by file_order,order_no
	</select>
	
	<select id="getTagByFileId" resultType="com.xiaoshabao.vkan.entity.TagEntity"
		parameterType="com.xiaoshabao.vkan.dto.FileDto">
		select
		<include refid="tagColumns" />
		from vk_tag
		inner join vk_file_tag
		on vk_tag.tag_id=vk_file_tag.tag_id
		<where>
			vk_file_tag.file_Id=#{fileId}
		</where>
	</select>

</mapper>