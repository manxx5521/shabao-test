	<!--获得模版实体根据id-->
	<select id="getTemplateByid" resultType="com.xiaoshabao.webframework.ui.entity.TemplateEntity">
		select template_id,template_name,template_desc,engine_type 
		from td_ui_template 
		where template_id=#{templateId}
	</select>
	<!--获得模版id获得关联-->
	<select id="getTemplateElements" resultType="com.xiaoshabao.webframework.ui.entity.TemplatElementEntity">
		select template_id,element_id,form_type,form_key,form_text,form_params,form_desc,
			order_no,required,view_type,read_type
		from td_ui_template_element
		where template_id=#{templateId}
	</select>
	<!--获得元素-->
	<select id="getElementById1" resultType="com.xiaoshabao.webframework.ui.entity.ElementEntity">
